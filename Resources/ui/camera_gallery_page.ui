<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkBox" id="gallery_root">
    <property name="css-classes">gallery-page</property>
    <property name="orientation">vertical</property>
    <property name="spacing">0</property>
    <property name="hexpand">true</property>
    <property name="vexpand">true</property>
    <property name="margin-top">0</property>
    <property name="margin-bottom">0</property>
    <property name="margin-start">0</property>
    <property name="margin-end">0</property>
    <child>
      <object class="GtkBox" id="gallery_header">
        <property name="css-classes">gallery-header</property>
        <property name="spacing">12</property>
        <property name="hexpand">true</property>
        <property name="halign">fill</property>
        <child>
          <object class="GtkButton" id="gallery_back_button">
            <property name="css-classes">back-button</property>
            <property name="label">← Back to Live</property>
            <property name="halign">start</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="gallery_title">
            <property name="hexpand">true</property>
            <property name="halign">start</property>
            <property name="css-classes">gallery-title</property>
            <property name="label">Gallery</property>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="gallery_rows_panel">
            <property name="orientation">vertical</property>
            <property name="spacing">4</property>
            <property name="halign">end</property>
            <property name="valign">center</property>
            <child>
              <object class="GtkLabel" id="gallery_rows_label">
                <property name="label">Rows</property>
                <property name="css-classes">gallery-rows-label</property>
                <property name="halign">center</property>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="gallery_rows_control">
                <property name="css-classes">gallery-rows-control</property>
                <property name="spacing">8</property>
                <child>
                  <object class="GtkButton" id="gallery_rows_decrease_button">
                    <property name="label">−</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="gallery_rows_value">
                    <property name="label">2</property>
                    <property name="css-classes">gallery-rows-value</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="gallery_rows_increase_button">
                    <property name="label">+</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkStack" id="gallery_stack">
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>
        <property name="transition-type">crossfade</property>
        <child>
          <object class="GtkStackPage" id="gallery_empty_page">
            <property name="name">empty</property>
            <property name="child">
              <object class="GtkBox" id="gallery_empty_box">
                <property name="css-classes">gallery-content-panel</property>
                <property name="orientation">vertical</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="spacing">12</property>
                <property name="halign">center</property>
                <property name="valign">center</property>
                <child>
                  <object class="GtkLabel" id="gallery_empty_label">
                    <property name="justify">center</property>
                    <property name="wrap">true</property>
                    <property name="label">No captures yet. Take a photo to populate the gallery.</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage" id="gallery_grid_page">
            <property name="name">grid</property>
            <property name="child">
              <object class="GtkScrolledWindow" id="gallery_scroller">
                <property name="css-classes">gallery-content-panel</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <child>
                  <object class="GtkFlowBox" id="gallery_flow">
                    <property name="column-spacing">2</property>
                    <property name="row-spacing">2</property>
                    <property name="margin-bottom">0</property>
                    <property name="margin-end">0</property>
                    <property name="margin-start">0</property>
                    <property name="margin-top">0</property>
                    <property name="selection-mode">single</property>
                    <property name="min-children-per-line">2</property>
                    <property name="max-children-per-line">4</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage" id="gallery_viewer_page">
            <property name="name">viewer</property>
            <property name="child">
              <object class="GtkOverlay" id="gallery_viewer_overlay">
                <property name="css-classes">gallery-viewer-overlay</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <child>
                  <object class="GtkPicture" id="gallery_full_picture">
                    <property name="css-classes">gallery-full-picture</property>
                    <property name="hexpand">true</property>
                    <property name="vexpand">true</property>
                    <property name="content-fit">contain</property>
                  </object>
                </child>
                <child type="overlay">
                  <object class="GtkBox" id="gallery_viewer_top_bar">
                    <property name="css-classes">gallery-viewer-top-bar</property>
                    <property name="orientation">horizontal</property>
                    <property name="spacing">8</property>
                    <property name="halign">start</property>
                    <property name="valign">start</property>
                    <property name="margin-top">16</property>
                    <property name="margin-start">16</property>
                    <child>
                      <object class="GtkButton" id="gallery_viewer_live_button">
                        <property name="css-classes">back-button</property>
                        <property name="label">Back to Live</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="gallery_viewer_back_button">
                        <property name="css-classes">gallery-viewer-back-button</property>
                        <property name="label">Back to Grid</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child type="overlay">
                  <object class="GtkBox" id="gallery_full_info_box">
                    <property name="css-classes">gallery-full-info</property>
                    <property name="orientation">horizontal</property>
                    <property name="spacing">8</property>
                    <property name="hexpand">true</property>
                    <property name="halign">fill</property>
                    <property name="valign">end</property>
                    <property name="margin-start">24</property>
                    <property name="margin-end">24</property>
                    <property name="margin-bottom">16</property>
                    <child>
                      <object class="GtkLabel" id="gallery_full_label">
                        <property name="css-classes">gallery-full-label</property>
                        <property name="hexpand">true</property>
                        <property name="halign">start</property>
                        <property name="wrap">true</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="gallery_footer">
        <property name="css-classes">gallery-footer</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">12</property>
        <property name="halign">center</property>
        <child>
          <object class="GtkButton" id="gallery_prev_button">
            <property name="label">Previous</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="gallery_page_label">
            <property name="label">Page 1 of 1</property>
            <property name="css-classes">gallery-page-label</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="gallery_next_button">
            <property name="label">Next</property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
